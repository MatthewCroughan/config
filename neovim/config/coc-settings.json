{
	//"coc.preferences.formatOnInsertLeave": true,
	"coc.preferences.formatOnSaveFiletypes": ["elm", "purescript"],
	"diagnostic.maxWindowHeight": 50,
	"languageserver": {
		"elmLS": {
			"command": "elm-language-server",
			"filetypes": ["elm"],
			"rootPatterns": ["elm.json"],
			"initializationOptions": {
				"elmPath": "elm", // optional
				"elmFormatPath": "elm-format", // optional
				"elmAnalyseTrigger": "never" // optional
			}
		},

		// "haskell": {
		// 	"command": "haskell-language-server-wrapper",
		// 	"args": ["--lsp"],
		// 	"rootPatterns": ["*.cabal", "stack.yaml", "cabal.project", "package.yaml", "hie.yaml"],
		// 	"filetypes": ["haskell", "lhaskell"]
		// },

		"purescript": {
			"command": "purescript-language-server",
			"args": ["--stdio"],
			"filetypes": ["purescript"],
			"trace.server": "off",
			"rootPatterns": ["bower.json", "psc-package.json", "spago.dhall"],
			"settings": {
				"purescript": {
					"addSpagoSources": true, // etc
					"buildCommand": "spago build --purs-args --json-errors",
					"editorMode": true
				}
			}
		}
	},
	"suggest.autoTrigger": "none"
}
